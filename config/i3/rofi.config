/* xft settings */
Xft.antialias: 1
Xft.autohint:  0
/* Xft.dpi:       110 */
Xft.hinting:   0
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault
Xft.rgba:      rgb


/* colors */
#define bg   #32302f
#define fg   #ebdbb2
#define blk  #282828
#define bblk #928374
#define dred #cc241d
#define red  #fb4934
#define dgrn #98971a
#define grn  #b8bb26
#define dylw #d79921
#define ylw  #fabd2f
#define dblu #458588
#define blu  #83a598
#define dmag #b16286
#define mag  #d3869b
#define dcyn #689d6a
#define cyn  #8ec07c
#define dwht #a89984
#define wht  #ebdbb2


/* rofi */
rofi.bw:              5
rofi.color-enabled:   true
rofi.columns:         1
rofi.eh:              1
rofi.font:            Iosevka Term Medium 12
rofi.fullscreen:      no
rofi.hide-scrollbar:  true
rofi.line-margin:     5
rofi.lines:           5
rofi.location:        0
rofi.padding:         0
rofi.separator-style: none
rofi.sidebar-mode:    false
rofi.terminal:        konsole
rofi.width:           750
rofi.yoffset:         3
rofi.modi:            run,ssh
rofi.ssh-client:      ssh
rofi.ssh-command:     {terminal} -e {ssh-client} {host}
rofi.disable-history: false
rofi.run-command:     {cmd}
rofi.run-shell-command:{terminal} -e {cmd}

 ! State:           'bg',     'fg',     'bgalt',  'hlbg',   'hlfg'
 rofi.color-normal: #002727,  #00d8d8,  #002727,  #270014,  #0000ff
 rofi.color-urgent: #002727,  #008b8b,  #002727,  #002727,  #008b8b
 rofi.color-active: #002727,  #008b8b,  #002727,  #002727,  #008b8b
 !                  'background', 'border', 'separator'
 rofi.color-window: #002727,      #000000,  #000000



/* colors */
*background:  bg
*foreground:  fg
*cursorColor: bblk

*color0:      blk
*color8:      bblk
*color1:      dred
*color9:      red
*color2:      dgrn
*color10:     grn
*color3:      dylw
*color11:     ylw
*color4:      dblu
*color12:     blu
*color5:      dmag
*color13:     mag
*color6:      dcyn
*color14:     cyn
*color7:      dwht
*color15:     wht